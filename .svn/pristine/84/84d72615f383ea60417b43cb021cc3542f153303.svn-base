@import './variable.styl'

transform-rotate(deg)
	transform rotate(deg)
	-ms-transform rotate(deg) /* IE 9 */
	-moz-transform rotate(deg) /* Firefox */
	-webkit-transform rotate(deg) /* Safari 和 Chrome */
	-o-transform rotate(deg) /* Opera */

transition-transition(ms)
	transition all ms
	-moz-transition all ms /* Firefox 4 */
	-webkit-transition all ms /* Safari 和 Chrome */
	-o-transition all ms /*Opera */
/* vue-router router-link 样式设置 */
.router-link-exact-active
	color color_primary
.consult-content
	font-size 14px
	padding 7px 15px
	word-break break-all
	word-wrap break-word
.image-wrapper
	.flex-max
		margin-right 15px
		&:last-child
			margin-right 0
.padding60
	padding-bottom 60px !important
.row
	padding 0 15px
	height 45px
	line-height 45px
	font-size 16px
	color #333333
	background-color #ffffff
.consult-tips
	color color_gray

.avator
	width 55px
	height 55px
	border-radius 50%
	background-position center center
	background-size cover
.doctor-section
	font-size 14px
	color color_gray
.h2title
	position relative
	font-size 16px
	line-height 16px
	color #333333
	padding-bottom 10px
	&:before
		content ''
		position absolute
		width 2px
		height 15px
		background-color #3d9bff
		top 0
		left -15px

/*暂无内容*/
.none-content
	font-size 16px
	color color_gray
	position absolute
	left 0
	right 0
	top 0
	bottom 0
	margin 150px auto 0
	width 150px
	img
		margin-bottom 15px
		display block
		width 150px
		height 103px
/*首页*/
.handlerArea
	&.align-center .svg-icon
		transform-rotate(0deg)
		transition-transition(500ms)
	&.align-end .svg-icon
		margin-bottom 5px
		transform-rotate(180deg)
		transition-transition(500ms)

.svg-icon.animate-rotate
	margin-right 10px
	transform-rotate(0deg)
	transition-transition(500ms)
	&.collapse
		transform-rotate(180deg)
		transition-transition(500ms)

/* 按钮 */
.btn
	width 100%
	font-size 16px
	height 40px
	line-height 40px
	text-align center
	border-radius 10px
	cursor pointer
	
.btn__primary
	@extend .btn
	color #ffffff
	background-color #3d9bff
	
.btn__default
	@extend .btn
	color #333333
	background-color #ffffff

/* input控件 */
.input-group
	height 45px
	line-height 45px
	border-radius 10px
	background-color default_border_color
	font-size 16px
	>label
		color #333333
	.form-control
		height 100%
		text-indent 7px
		font-size 16px
		background-color default_border_color

/* 表单页 */
.form-page
	label
		min-width 5em
		width 24.63%
		line-height 45px
	input
		font-size 16px
		height 100%
		vertical-align middle
	.auth-btn
		position absolute
		right 0
		top 0
		width 124px
		text-align center
		color #ffffff
		background-color #3d9bff
		cursor pointer
		@media screen and (max-width: 320px)
			width 100px
/* 块居中 */
.block-center
	display block
	margin 0 auto

/*base-tabbar组件*/
.base-dropdown
	line-height 25px
	display inline-block
	color color_gray
	cursor pointer
.base-tabbar
	font-size 16px
	background-color #ffffff
	color color_gray
	position fixed !important
	bottom 0
	left 0
	right 0
	z-index 1000
.base-tab-item
	height 45px
	line-height 45px
	text-align center
	cursor pointer
.base-tab-item img
	width 25px
	height 25px
	vertical-align middle
	margin-right 10px
	margin-top -2px
	
/* base-focus组件 */
.base-focus
	height 25px
	width 62px
	cursor pointer
	
/*base-search组件*/
.base-search
	position relative
	overflow hidden
	height 30px
	line-height 30px
	border-radius 15px
	font-size 14px
	color color_gray
	background-color #E5E5E5
	>input
		vertical-align middle
		padding-left 35px
		background-color #E5E5E5
		height 100%
		width 100%
		font-size 14px
	.icon-search
		position absolute
		left 10px
		top 8px
		font-size 14px
/*base-tag 组件*/
.base-tag
	margin 0 5px 15px
	display inline-block
	border-radius 25px
	border 1px solid color_gray
	background-color #f5f5f5
	color color_dark
	font-size 14px
	padding 2px 8px
	&.active
		border-color #3d9bff
		color #3d9bff
		background-color #d0e3f7

/*单选框组件*/	
.base-radio
	display inline-block
	width 25px
	height 25px
	line-height 25px
	text-align center
	font-size 14px
	border 1px solid #dddddd
	color #dddddd
	border-radius 50%
	margin-right 8px
	&.active
		border 1px solid #3d9bff
		color #3d9bff
.base-radio+.base-radio
	margin-right 0
	
/*vux样式*/
.dp-header
	.dp-item
		color color_gray !important
	.vux-datetime-clear
		color color_primary !important
.weui-actionsheet__menu .weui-actionsheet__cell
	text-align center !important
.weui-skin_android .weui-actionsheet
	width 230px !important
	border-radius 6px
.weui-dialog__btn_primary
	color color_primary !important
